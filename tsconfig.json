{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "src/cli-working.ts",
    "src/cli-basic.ts",
    "src/ai/LocalAIOrchestrator.ts",
    "src/chains/EnhancedAttackChainEngine.ts",
    "src/chains/EnhancedAttackChainManager.ts",
    "src/chains/SimpleEnhancedManager.ts",
    "**/*.disabled"
  ]
}
