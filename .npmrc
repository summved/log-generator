# Ensure all packages are downloaded from the official npm registry
registry=https://registry.npmjs.org/

# Disable package-lock for security (optional - you may want to keep it)
# package-lock=false

# Only allow packages from npm registry (no third-party registries)
@*:registry=https://registry.npmjs.org/

# Security settings
audit-level=moderate
fund=false

# Prevent automatic execution of scripts from dependencies
ignore-scripts=false

# Use exact versions for better security
save-exact=true

# Disable automatic dependency updates that could introduce vulnerabilities
save-prefix=""

# Log level for better visibility
loglevel=warn
