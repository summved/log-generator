# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Node.js Environment
NODE_ENV=production
LOG_LEVEL=info

# SIEM Integration
SIEM_HTTP_URL=https://your-siem.company.com/api/logs
SIEM_API_TOKEN=your-siem-api-token-here

# Database Configuration (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=log_generator
DB_USER=log_user
DB_PASSWORD=your-database-password

# Monitoring
GRAFANA_PASSWORD=admin123
PROMETHEUS_RETENTION=200h

# Docker Services Security
WAZUH_ADMIN_USER=admin
WAZUH_ADMIN_PASSWORD=your-secure-wazuh-password
ELASTIC_PASSWORD=your-secure-elastic-password

# HTTP Server Security
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Security
JWT_SECRET=your-jwt-secret-here
API_KEY=your-api-key-here

# Performance Settings
MAX_WORKERS=4
MEMORY_BUFFER_SIZE=10000
BATCH_SIZE=500
FLUSH_INTERVAL=200

# Storage Configuration
LOG_RETENTION_DAYS=30
MAX_LOG_FILE_SIZE=1GB
MAX_LOG_FILES=10

# Network Configuration
HTTP_PORT=3000
METRICS_PORT=8080
HEALTH_CHECK_INTERVAL=30

# Feature Flags
ENABLE_WORKER_THREADS=true
ENABLE_ML_PATTERNS=true
ENABLE_ATTACK_CHAINS=true
ENABLE_METRICS=true
